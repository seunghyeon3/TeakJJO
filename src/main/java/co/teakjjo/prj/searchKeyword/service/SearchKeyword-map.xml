<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="co.teakjjo.prj.searchKeyword.service.SearchKeywordMapper">

	<insert id="insertKeyword">
		INSERT INTO SEARCHKEYWORD VALUES(
		<if test="member_Id != null">
			#{member_Id}
		</if>
		<if test="searchKeyword != null">
			,#{searchKeyword}
		</if>, 1
		)
	</insert>

	<select id="getKeyword"
		resultType="co.teakjjo.prj.searchKeyword.service.SearchKeywordVO">
		SELECT * FROM SEARCHKEYWORD
	</select>

	<update id="updateHit">
		UPDATE SEARCHKEYWORD SET
		<if test="member_Id != null">
			hit = #{searchHit}
		</if>
		WHERE MEMBER_ID = #{memberId} AND SEARCHKEYWORD = #{searchKeyword}

	</update>

	<select id="keywordCheck" resultType="boolean">
	SELECT CASE WHEN COUNT(*) = 1 THEN 0 ELSE 1 END AS ID
		FROM SEARCHKEYWORD WHERE SEARCHKEYWORD= #{memberId}
	
	</select>



</mapper>